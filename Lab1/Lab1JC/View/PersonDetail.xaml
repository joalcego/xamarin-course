<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Lab1JC.View.PersonDetail"
             Title="Person Detail">
    <StackLayout Margin="0,20,0,0" HorizontalOptions="Fill">
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="Start">
            <StackLayout>
                <Image Source="user-icon.png" WidthRequest="40" HeightRequest="40"/>
            </StackLayout>
            <StackLayout BackgroundColor="Aqua" VerticalOptions="Center">
                <Label Text="{Binding CurrentPerson.Name}"/>
                <Label Text="{Binding CurrentPerson.BirthDate}"/>
            </StackLayout>
        </StackLayout>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="5" BackgroundColor="Lime">
            <BoxView VerticalOptions="Start" HeightRequest="100" BackgroundColor="Green"/>
            <BoxView VerticalOptions="EndAndExpand" HeightRequest="100" BackgroundColor="Red"/>
        </StackLayout>
        <Button Text="Awesome button" VerticalOptions="End" HeightRequest="50"/>
    </StackLayout>
</ContentPage>
